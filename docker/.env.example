# PostgreSQL
POSTGRES_USER=auditai
POSTGRES_PASSWORD=auditai_secret
POSTGRES_DB=auditai
DATABASE_URL=postgresql+asyncpg://auditai:auditai_secret@postgres:5432/auditai

# Redis
REDIS_URL=redis://redis:6379/0

# MinIO (S3)
S3_ENDPOINT=http://minio:9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin123
S3_BUCKET=audit-recordings
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin123

# JWT
JWT_SECRET=change-me-to-a-secure-random-string
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=1440

# Upload
UPLOAD_MAX_SIZE_MB=500
ALLOWED_EXTENSIONS=wav,mp3,zip

# API
API_HOST=0.0.0.0
API_PORT=8000
